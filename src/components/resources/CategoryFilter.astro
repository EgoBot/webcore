---
interface Props {
  categories: string[];
  currentCategory?: string;
}

const { categories, currentCategory } = Astro.props;
---

<div class="category-filter">
  <a
    href="/resources"
    class:list={["filter-chip", { active: !currentCategory }]}
  >
    All Resources
  </a>

  {categories.map(category => (
    <a
      href={`/resources?category=${encodeURIComponent(category)}`}
      class:list={["filter-chip", { active: currentCategory === category }]}
    >
      {category}
    </a>
  ))}
</div>

<style>
  .category-filter {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .filter-chip {
    padding: 0.5rem 1rem;
    border-radius: max(100px, calc(6.94vw * var(--scale, 1)));
    border: 2px solid var(--color-border, #e5e7eb);
    background: var(--color-surface, #f3f4f6);
    color: var(--color-text, #111827);
    text-decoration: none;
    transition: background 0.15s ease-out, border-color 0.15s ease-out, color 0.15s ease-out;
    font-weight: 500;
    text-transform: uppercase;
    font-size: 0.875rem;
    letter-spacing: 0.025em;
  }

  .filter-chip:hover {
    border-color: var(--color-primary, #000000);
    background: var(--color-primary, #000000);
    color: white;
  }

  .filter-chip.active {
    background: var(--color-primary, #000000);
    color: white;
    border-color: var(--color-primary, #000000);
  }
</style>
